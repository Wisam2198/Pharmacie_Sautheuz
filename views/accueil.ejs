<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.css">
  <title>Pharmacie Sautheuz</title>
</head>

<body class="bg-gray-100 m-0 overflow-hidden">

  <nav class="bg-green-500 p-4 flex justify-between items-center text-white">
    <div>
      <span class="text-lg font-bold">Pharmacie Sautheuz</span>
    </div>
    <div class="flex items-center">
      <input type="text" placeholder="Recherche..."
        class="px-2 py-1 border border-gray-300 rounded-lg bg-gray-100 text-black">
      <button
        class="p-2.5 rounded-full items-center bg-gradient-to-r from-green-600 to-blue-500 hover:to-blue-600 ml-3">
        <img src="<%= loupe %>" alt="Loupe Icon" class="w-4 h-4">
      </button>
    </div>
  </nav>

  <img src="<%= bgpharma %>" alt="Background pharmacie" class="w-full h-screen object-cover">


  <div id="authentification"
    class="fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-50 flex items-center justify-center hidden">
    <div
      class="bg-gradient-to-r from-blue-600 to-green-400 p-6 rounded border border-500 border-black w-1/4 h-1/3 flex flex-col relative">
      <img src="<%= croix %>" alt="Fermer" class="absolute top-4 right-4 w-6 h-6 cursor-pointer" id="btnFermerFenetre">
      <p class="text-center">Authentification</p><br>
      <div class="text-center">
        <form id="connexionForm">
          <input type="text" id="pseudo" placeholder="identifiant..."
            class="border border-black rounded px-2 py-1 mb-2"><br><br>
          <input type="password" id="mdp" placeholder="mot de passe..."
            class="border border-black rounded px-2 py-1 mb-4"><br><br>
          <div class="mt-auto">
            <button type="button" id="btnConnexion" class="bg-green-500 text-white px-4 py-2 rounded" onclick="connexionUtilisateur()">Connexion</button>
            <button id="btnInscrire" class="bg-blue-500 text-white px-4 py-2 rounded">S'inscrire</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="fixed bottom-0 right-0 p-4">
    <% if (utilisateur) { %>
      <form id="formDeconnexion" method="post" action="/deconnexion">
        <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">DÃ©connexion</button>
      </form>
    <% } else { %>
      <button id="btnOuvrirFenetre" class="relative group overflow-hidden px-6 h-12 rounded-full flex space-x-2 items-center bg-gradient-to-r from-blue-900 to-green-500 hover:to-blue-600">
        <span class="relative text-sm text-white">Authentification</span>
      </button>
    <% } %>
  </div>

  <% if (!utilisateur) { %>
    <script>
      ouvrirFenetre.addEventListener('click', () => {
        authentification.classList.remove('hidden');
      });
    </script>
  <% } %>

</body>

</html>

<script>
  const ouvrirFenetre = document.getElementById('btnOuvrirFenetre');
  const fermerFenetre = document.getElementById('btnFermerFenetre');
  const connexion = document.getElementById('btnConnexion');
  const inscrire = document.getElementById('btnInscrire');
  const authentification = document.getElementById('authentification');

  ouvrirFenetre.addEventListener('click', () => {
    authentification.classList.remove('hidden');
  });

  fermerFenetre.addEventListener('click', () => {
    authentification.classList.add('hidden');
  });


  async function connexionUtilisateur() {
    const pseudo = document.getElementById('pseudo').value;
    const mdp = document.getElementById('mdp').value;

    const response = await fetch('http://localhost:3000/connexion', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ pseudo, mdp }),
    });

    const data = await response.json();

    if (response.ok) {
      window.history.replaceState({}, document.title, window.location.href);
    }

    if (response.status === 200) {
      window.location.href = '/espace_pharmaciens';
    } else {
      alert(data.message);
    }
  }

</script>